extends ../layouts/main
block title
  title Markdown Presentation
append styles
  link(rel="stylesheet", href="/samples/ppt/resources/css/styles.css", media="screen", title="no title")
block content
  .container#container(data-snippet= slide)
    if !readOnly
      .row#toolbar
        .col-md-12
          button.btn.glyphicon.glyphicon-plus#new(type="button",  name="button" data-tool="new" data-presenter= presenter)
          button.btn.glyphicon.glyphicon-floppy-disk#save(type="button",  name="button" data-url= "/presenter/" + presenter + "/" + presentation data-tool="save", data-method="post" data-data="editors.getData()")
          if slide
            button.btn.glyphicon.glyphicon-play#presentation(type="button",  name="button" data-snippet= snippetName data-tool="tutorial")
    .row
      .col-md-8.col-md-offset-2
        #slide.slide
          if slide && slide.htmlSlide
            if !readOnly
              .edit.glyphicon.glyphicon-pencil
            .content(data-snippet-el="htmlSlide") !{slide && slide.htmlSlide}
        if !readOnly
          #edit-slide(class= (slide ? "hidden" : ""))
            ul.nav.nav-tabs
              li.active
                a#edit-nav(href="#slide-editor" data-toggle="tab") Edit
              li
                a#preview-nav(href="#slide-preview" data-toggle="tab") Preview
            .tab-content
              #slide-editor.editor.tab-pane.active(data-snippet-el="slide" data-editor data-mode="markdown")
              #slide-preview.slide.tab-pane(data-snippet-el="htmlSlide")
append scripts
  script(src="/samples/ppt/resources/js/scripts.js", charset="utf-8")
